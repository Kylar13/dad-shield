{
  "name": "NetMate",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "NetMate Junction 2019 Project",
  "homepage_url": "https://netmate.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_title": "NetMate",
    "default_popup": "widget.html",
    "css": ["index.css"]
  },
  "background": {
    "scripts": [
      "js/extension/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "content_security_policy": "default-src 'self'; style-src 'unsafe-inline';",
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "js/extension/content.js"
      ],
      "run_at": "document_end"
    }
  ]
}
